<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:id="@+id/con_item_root"
    android:background="@drawable/background_state_drawable"
    android:clickable="true">


    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_location_on_white_36dp"
        android:paddingLeft="16dp"/>

    <TextView
        android:id="@+id/lbl_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_icon"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:text="Somae comme e eeu ami"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/lbl_store_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_store_name"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:text="MOnoj sdfsd"
        android:textColor="@color/colorAccent"
        android:textSize="14dp"/>

    <ImageView
        android:id="@+id/img_icon_fav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="16dp"
        android:src="@drawable/ic_favorite_white_24dp"
        android:background="@drawable/background_state_drawable"
        />

</RelativeLayout>